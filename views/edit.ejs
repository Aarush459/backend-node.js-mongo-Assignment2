<!DOCTYPE html>
<html>
<head>
  <title>Edit Person</title>
</head>
<body>
  <h1>Edit Person</h1>

  <form action="/person/<%= person._id %>?_method=PUT" method="POST">
    <label>Name: <input type="text" name="name" value="<%= person.name %>" required></label><br><br>
    <label>Age: <input type="number" name="age" value="<%= person.age %>"></label><br><br>

    <label>Gender:
      <select name="gender">
        <option></option>
        <option <%= person.gender === "Male" ? "selected" : "" %>>Male</option>
        <option <%= person.gender === "Female" ? "selected" : "" %>>Female</option>
        <option <%= person.gender === "Other" ? "selected" : "" %>>Other</option>
      </select>
    </label><br><br>

    <label>Mobile: <input type="text" name="mobile" value="<%= person.mobile %>"></label><br><br>

    <button type="submit">Update</button>
    <a href="/person">Cancel</a>
  </form>

</body>
</html>
