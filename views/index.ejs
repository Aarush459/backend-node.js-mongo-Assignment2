<!DOCTYPE html>
<html>
<head>
  <title>People List</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>Person List</h1>

  <p><a href="/person/new">Create new person</a></p>

  <table border="1" cellpadding="6">
    <tr>
      <th>Name</th><th>Age</th><th>Gender</th><th>Mobile</th><th>Actions</th>
    </tr>

    <% if (people.length === 0) { %>
      <tr><td colspan="5">No person found</td></tr>
    <% } %>

    <% people.forEach(p => { %>
      <tr>
        <td><%= p.name %></td>
        <td><%= p.age %></td>
        <td><%= p.gender %></td>
        <td><%= p.mobile %></td>
        <td>
          <a href="/person/<%= p._id %>/edit">Edit</a> |
          <a href="/person/<%= p._id %>/delete">Delete</a>
        </td>
      </tr>
    <% }) %>
  </table>
</body>
</html>
